<h1>Все статьи</h1>

<%= link_to 'Новая статья', new_article_path %>
<table>
	<tr>
		<th>Заголовок</th>
		<th>Текст</th>
		<th colspan="3"></th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Смотреть', article_path(article) %></td>
			<td><%= link_to 'Изменить', edit_article_path(article) %></td> 
			<td><%= link_to 'Удалить', article_path(article),
					method: :delete,
					data: {confirm: 'Вы уверены?'} %></td>
		</tr>
	<% end %>
</table>
